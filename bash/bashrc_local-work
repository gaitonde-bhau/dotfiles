# Local ~/.bashrc: executed by bash(1) for non-login shells.
# see /usr/share/doc/bash/examples/startup-files (in the package bash-doc)
# Kartik Shenoy (kartik.shenoy@amd.com)
#
# This file is used only for local settings
export TZ="US/Mountain"
export BOOST_HOME="/tool/pandora64/.package/boost-1.62.0-gcc620-vg3120"

# fzf: https://github.com/junegunn/fzf
[[ -d $HOME/.local/install/fzf ]] && export FZF_PATH="$HOME/.local/install/fzf"

# Putting this before ruby because ruby binary is in pandora
for path in /tool/pandora64/bin /tool/pandora/bin; do
  if [[ -d "$path" ]]; then
    export PATH=$path:$PATH
  fi
done

# To help load pandora modules
. /proj/verif_release_ro/cbwa_initscript/nodisk_current/cbwa_init.bash
# This is needed to display the terminal characters correctly : /
export LANG=en_US.UTF-8
export XTERM_LOCALE=en_US.UTF-8

# Use
# module list - to look at loaded modules
# module avail <package> - to see different versions of the package eg. `module avail emacs`
module load boost/1.62.0-gcc620-vg3120
module load ctags/4518
module load emacs/25.1
module load gcc/6.3.0
module load git/2.16.2
module load llvm/4.0.0-gcc630
module load python/3.5.2
module load ruby/2.3.0
module load the_silver_searcher/2.1.0
module load tmux/2.7
module load vim/8.0-c
module load xterm/326

complete -f -o default -X '!*.xml' ljd
complete -f -o default -X '!*.vv' vv

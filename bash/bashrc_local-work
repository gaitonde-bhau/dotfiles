# Local ~/.bashrc: executed by bash(1) for non-login shells.
# see /usr/share/doc/bash/examples/startup-files (in the package bash-doc)
# Kartik Shenoy (kartik.shenoy@amd.com)
#
# This file is used only for local settings
export TZ="US/Mountain"
export BOOST_HOME="/tool/pandora64/.package/boost-1.62.0-gcc620-vg3120"

# fzf: https://github.com/junegunn/fzf
[[ -d $HOME/.local/install/fzf ]] && export FZF_PATH="$HOME/.local/install/fzf"

# Putting this before ruby because ruby binary is in pandora
for path in /tool/pandora64/bin /tool/pandora/bin; do
  if [[ -d "$path" ]] && [[ ! "$PATH" == *$path* ]]; then
    export PATH=$path:$PATH
  fi
done

complete -f -o default -X '!*.xml' ljd
complete -f -o default -X '!*.vv' vv

# bashrc file for home

has() {
  command -v "$1" > /dev/null 2>&1
}

# thefuck : https://github.com/nvbn/thefuck
has thefuck && eval "$(thefuck --alias pls)"


# When leaving the console, clear the screen to increase privacy
if [[ "$SHLVL" = 1 ]]; then
    [[ -x /usr/bin/clear_console ]] && /usr/bin/clear_console -q
fi


##
# Aliases
alias amd_vpn='sudo openconnect -u kshenoy --no-cert-check --token-mode=rsa mkm-vpn.amd.com'


## Specific to root
trap_exit() {
  find $(dirname $HISTFILE) -group root -exec chmod 644 {} +
}
if (( $EUID ==  0 )); then
  # echo "Exiting..."
  trap trap_exit EXIT
fi
